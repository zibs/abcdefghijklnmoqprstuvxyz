<section id="flash">
  <% if flash %>
    <% flash.each do | message_type, message| %>
      <section class="row flash-msg alert-<%=message_type%>">
        <section class="alert">
          <%= message %>
          <i class="material-icons float-right flash-close">close</i>
        </section>
      </section>
    <% end  %>
  <% end %>
  <% flash.clear %>
</section>

<script type="text/javascript">
$(document).ready(function(){
  setTimeout(function(){
    $('#flash').fadeOut();
  }, 10000);
 })
</script>
